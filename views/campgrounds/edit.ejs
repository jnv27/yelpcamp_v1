<%- include("../partials/header") %>

<!-- <div class = "container"> -->
	<div class="row">
		<h1 style="text-align:center;">
			Edit Campground <%= camp.name %>
		</h1>
		<hr  style="width:35%;">
		<div style="width:30%; margin: 20px auto;">
			<form action="/campground/<%=camp._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type = "text" name="camp[name]" value= "<%= camp.name %>" required>
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type = "text" name="camp[url]" value= "<%= camp.url %>" required>
				</div> -->
				 <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="url" accept="image/*" required>
                </div>
				<div class="form-group">
				  <input class="form-control" type="number" name="camp[cost]" value="<%= camp.cost %>" step="0.01" min="0" required>
				</div>
				<!-- <div class="form-group">
					<label for="location">Location</label>
					<input class="form-control" type="text" name="location" id="location" value="<%= camp.location %>">
				</div> -->
				<div class="form-group">
					<input class="form-control" type = "text" name="camp[description]" value= "<%= camp.description %>" required>
				</div>
				<div class="form-group">
					<input class="btn btn-primary btn-lg btn-block"type = "submit">
				</div>
			</form>
			<a href ="/campground">Go Back</a>
		</div>
		
	</div>
<!-- </div> -->

<%- include("../partials/footer") %>